{
	"compilerOptions": {
		"strict": true,
		"esModuleInterop": true,
		"allowJs": true,
		"noEmit": true,
		"target": "ES2019",
		"moduleResolution": "node",
		"baseUrl": ".",
		"paths": {
			"@util/*": ["utilities/*"],
			"@element/*": ["site/elements/*"],
			"@layout/*": ["site/layout/*"],
			"@page/*": ["site/page/*"]
		},
		"resolveJsonModule": true
	}
}